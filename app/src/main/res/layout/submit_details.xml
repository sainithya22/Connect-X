<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/submit_details"
    android:background="#FCF951"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="136dp"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="66dp"
        android:text="No of players"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="65dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="40dp"
        android:text="Choose Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/choose_date"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="42dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="42dp"
        android:adjustViewBounds="true"
        android:background="#0000"

        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/choose_date"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:srcCompat="@drawable/calendar" />

    <Button
        android:id="@+id/LocationButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="80dp"
        android:text="Click to choose location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeView" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/choose_date" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="40dp"
        android:text="Choose Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageButton
        android:id="@+id/setTime"
        android:layout_width="42dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:background="#0000"
        app:layout_constraintStart_toEndOf="@+id/timeView"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:srcCompat="@drawable/clock" />

    <Button
        android:id="@+id/submit"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="170dp"
        android:text="SUBMIT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LocationButton" />

</androidx.constraintlayout.widget.ConstraintLayout>